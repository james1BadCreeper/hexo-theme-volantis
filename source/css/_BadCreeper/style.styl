// ao title
#l_main #post-body h2 
  border-left: 4px solid #3B73DE
  border-bottom: none
  padding-left: .75rem
  margin-top: 2rem
  margin-bottom: 1.5rem
  line-height: 1.6
  &::before
    display: none

// iconfont
.iconfont
  width: 1em;
  height: 1em;
  fill: currentColor
  overflow: hidden
  vertical-align: -0.15em
  &.emoji
    width: 1.3em
    height: 1.3em
    vertical-align: -0.3em
  &.fa-fw
    text-align: center

// kbd
kbd
  border-radius: 4px
  border: 1px solid #d2d2d2
  border-bottom-width: 2px
  background: #fafafa
  background-color: #fafafa
  color: var(--color-p)
  padding: 3px 5px
  padding-left: 4px
  padding-right: 4px
  box-shadow: inset 0 -2px 0 hsl(240deg 1% 83%), 0 1px 1px rgba(0, 0, 0, .5) !important
  font-size: .9em
  font-family: $fontfamily-code

// set rightmenu style
ul.list-v.rightmenu
  border-radius: 8px
  li.music
    &.name
      p.nav.music-title
        text-align: center

