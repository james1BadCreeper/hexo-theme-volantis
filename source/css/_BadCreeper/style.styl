// body locked
#l_main
  &.no_sidebar
    max-width: $layout-width - $sidebar !important
.body-wrapper
  max-width: $layout-width !important
  @media screen and (min-width: $layout-width * 1.5)
    max-width: $layout-width * 1.2 !important

// fixed mobile
#safearea
  @media screen and (max-width: $device-mobile)
    margin: 0
    box-shadow: none
    .body-wrapper
      padding: 0
    #l_main
      padding-left: 0
      article#comments,
      article#friends,
      article#post,
      article#page,
      article#arc,
      article#docs 
        border-radius: 0
      article#cat,
      article#tag
        margin: 0
        border-radius: 0
      .post-wrapper
        margin: 0 0 16px
        .post
          border-radius: 0
    #l_side
      .widget.mobile
        border-radius: 0
  @media screen and (max-width: $device-tablet)
    #l_main
      padding-left: 0
